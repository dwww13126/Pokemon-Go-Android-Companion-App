<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hostoption_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/host_options"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="35dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/hostoption_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/host_option_time"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25dp"
            />

        <View
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="0.5dp"
            android:background="@color/horizontalLine"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hostoption_pokemonNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pokemon Name"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20dp"
                />

        </RelativeLayout>

        <EditText
            android:id="@+id/hostoption_pokemonInput"
            android:layout_width="300dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:singleLine="true"
            android:hint="Enter Pokemon Here"/>

        <TextView
            android:id="@+id/hostoption_hatchedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Raid Expiry Time"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/CreatePost_timeBox2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Set Time"
                android:onClick="SetTime2" />

            <TimePicker
                android:id="@+id/hostoption_timeSpinner"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:textColor="@color/white"
                android:timePickerMode="spinner"
                android:layout_centerHorizontal="true"
                android:theme="@style/my_time_picker_style"
                android:inputType="time" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hostoption_ConfirmRaidGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/hostoption_ConfirmRaidButton"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:src="@android:color/holo_red_dark"
                />
            <TextView
                android:id="@+id/hostoption_ConfirmRaidText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:text="Confirm Raid"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hostoption_UpdatePostGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/hostoption_UpdatePostBtn"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:src="@android:color/holo_red_dark"
                />
            <TextView
                android:id="@+id/hostoption_UpdatePostText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:text="Set Pokemon Details"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hostoption_jumpInButtonGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/hostoption_jumpInButton"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:src="@android:color/holo_red_dark"
                />
            <TextView
                android:id="@+id/hostoption_jumpInButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:text="Begin Raid"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Details_deletePostBtnGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/hostoption_deletePostBtn"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:src="@android:color/holo_red_dark"
                />
            <TextView
                android:id="@+id/hostoption_deletePostText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:text="Delete Post"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/sortButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:onClick="backToDash"
        />

</androidx.constraintlayout.widget.ConstraintLayout>